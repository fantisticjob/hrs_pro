<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- Appenders -->
	<!-- webFile -->
	<appender name="webFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/logs/webLog.log" />
		<param name="Append" value="false" />
		<param name="MaxFileSize" value="5000KB"/>
		<param name="MaxBackupIndex" value="5"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
	</appender>
	<!-- serviceFile -->
	<appender name="serviceFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/logs/serviceErrors.log" />
		<param name="Append" value="false" />
		<param name="MaxFileSize" value="5000KB"/>
		<param name="MaxBackupIndex" value="5"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
	</appender>
	<!-- daoFile -->
	<appender name="daoFile" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/logs/daoErrors.log" />
		<param name="Append" value="false" />
		<param name="MaxFileSize" value="5000KB"/>
		<param name="MaxBackupIndex" value="5"/>
		<param name="DatePattern" value=".yyyy-MM-dd" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
	</appender>
	<appender name="apacheLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="D:/logs/apacheErrors.log" />
		<param name="Append" value="false" />
		<param name="MaxFileSize" value="5000KB"/>
		<param name="MaxBackupIndex" value="5"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
	</appender>

	<!-- Logger -->
	<logger name="com.hausontech.hrs.web.controller">
		<level value="error" />
		<appender-ref ref="webFile" />
	</logger>
	
	<!-- Logger -->
	<logger name="com.hausontech.hrs.service">
		<level value="error" />
		<appender-ref ref="serviceFile" />
	</logger>

	<!-- Logger -->
	<logger name="com.hausontech.hrs.dao">
		<level value="error" />
		<appender-ref ref="daoFile" />
	</logger>
	
    <!-- apache -->
	<logger name="org.apache">
		<level value="error" />
		<appender-ref ref="apacheLog" />
	</logger>
	
	<logger name="org.pentaho.di">
		<level value="error" />
		<appender-ref ref="apacheLog" />
	</logger>
	
    <!-- Spring -->
	<logger name="org.apache">
		<level value="error" />
		<appender-ref ref="apacheLog" />
	</logger>

	<!-- Root Logger -->
	<root>
		<level value="info"></level>
		<appender-ref ref="${log.appender}" />
	</root>
</log4j:configuration>  
